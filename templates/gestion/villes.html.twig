        {% for ville in villes %}
            <tr>
            <td>{{ ville.nomVille }}</td>
            <td>{{ ville.codePostal }}</td>
            <td><a href="{{ path('gestion_villes_edit', {'id': ville.id}) }}" class="button">Modifier</a>   <a href="{{ path('gestion_villes_delete', {'id': ville.id}) }}" class="button">Supprimer</a></td>
            </tr>
        {% endfor %}

        <tr>
        {{ form_start(villeajoutform) }}
        <td>{{ form_widget(villeajoutform.nomVille) }}</td>
        <td>{{ form_widget(villeajoutform.codePostal) }}</td>
        <td><button class="button">Ajouter</button></td>
        {{ form_end(villeajoutform)}}
        </tr>
    </tbody>
</table>
{% endblock %}


