{% extends 'base.html.twig' %}

{%  block title %}
    {{ parent() }} | Gestion Villes
{% endblock %}

{% block body %}

<h2>GÃ©rer les villes</h2>

<div id="filtrage">
    <h3>Filtrer les villes</h3>
    {{ form_start(filtreForm)}}
    Le nom contient : {{ form_widget(filtreForm.nom)}} <button class="button">Rechercher</button>
    {{ form_end(filtreForm) }}
